{
   "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "Node",
      "rootDir": "src",
      "outDir": "dist",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "emitDeclarationOnly": false,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "dist"]
}
