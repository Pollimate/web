{
   "$schema": "https://turborepo.com/schema.json",
   "ui": "stream",
   "tasks": {
      "build": {
         "dependsOn": ["^build"],
         "outputs": ["dist/**", ".next/**"]
      },
      "lint": {
         "dependsOn": ["^lint"]
      },
      "check-types": {
         "dependsOn": ["^check-types"]
      },
      "dev": {
         "inputs": ["$TURBO_DEFAULT$", ".env*"],
         "cache": false,
         "persistent": true
      },
      "start": {
         "cache": false,
         "persistent": true
      },

      "test": {
         "dependsOn": ["^lint"],
         "cache": false,
         "persistent": true
      }
   }
}
